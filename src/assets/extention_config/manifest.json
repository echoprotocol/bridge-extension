{
  "short_name": "BRG",
  "name": "Echo Bridge",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "./index.html",
    "default_title": "Echo Bridge"
  },
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite",
    "notifications"
  ],
  "web_accessible_resources": [
    "inpage.js",
    "background.js",
    "unlimitedStorage.js"
  ]
}